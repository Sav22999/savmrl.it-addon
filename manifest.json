{
  "manifest_version": 2,
  "name": "savmrl.it",
  "version": "1.0",
  "description": "A free shortener link and redirect service.",
  "applications": {
    "gecko": {
      "id": "savmrl.it@saveriomorelli.com"
    }
  },
  "author": "Saverio Morelli (Sav22999)",
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "/images/icon.png",
    "48": "/images/icon.png",
    "128": "/images/icon.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "/images/icon.png",
      "48": "/images/icon.png",
      "128": "/images/icon.png"
    },
    "default_title": "savmrl.it"
  }
}